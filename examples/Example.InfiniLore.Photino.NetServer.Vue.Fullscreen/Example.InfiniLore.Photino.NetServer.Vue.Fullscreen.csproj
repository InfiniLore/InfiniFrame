<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\InfiniLore.Photino.NET.Server\InfiniLore.Photino.NET.Server.csproj" />
      <ProjectReference Include="..\..\src\InfiniLore.Photino.NET\InfiniLore.Photino.NET.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="wwwroot\**" />
    </ItemGroup>

    <ItemGroup>
        <None Include="wwwroot\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Source\"/>
    </ItemGroup>

    <Target Name="BuildFrontend" BeforeTargets="Build">
        <Message Text="Building frontend with npm..." Importance="high" />
        <Exec Command="npm run vue.fullscreen-build" WorkingDirectory="$(ProjectDir)/Source/Photino.Vue" />
    </Target>

</Project>

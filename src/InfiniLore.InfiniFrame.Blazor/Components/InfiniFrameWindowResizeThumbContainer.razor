<InfiniFrameWindowResizeThumb ResizeArea="@ResizeArea" ZIndex="@ZIndex" ResizeThumb="ResizeOrigin.TopRight"/>
<InfiniFrameWindowResizeThumb ResizeArea="@ResizeArea" ZIndex="@ZIndex" ResizeThumb="ResizeOrigin.BottomRight"/>
